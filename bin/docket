#!/bin/sh

git='git -C ~/vc/qdocs'

if test -n "$1"
then
    fname=list_"$1"
else
    fname=list
fi

vim scp://lava/vc/qdocs/brian/"$fname"

if ssh lava "$git diff-index --quiet HEAD -- brian/$fname"
then
    echo
else
    echo commit message:
    read message
    ssh lava "$git commit brian/$fname -m \"$message\""
fi


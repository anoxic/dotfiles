#!/bin/sh

_mosh() {
    # arg1 = port, arg2 = host

    if which mosh 2>&1 >/dev/null
    then
       mosh "$1"
    else
       ssh "$1"
    fi
}

# note: the weird port numbers are to keep logs clean
case "$1" in
    static|lava|ftp1|sse1|sse2|ssc1|w2|adna)
        _mosh "$1";;
    *)
        ssh "$1";;
esac

#!/bin/sh

_mosh() {
    # arg1 = port, arg2 = host

    if command -v mosh >/dev/null 2>&1
    then
       mosh "$1"
    else
       ssh "$1"
    fi
}

# note: the weird port numbers are to keep logs clean
case "$1" in
    static|lava|ftp1|sse1|sse2|ssc1|sqle1|sqlc1|w2|kr|adna)
        _mosh "$1";;
    *)
        ssh "$1";;
esac
